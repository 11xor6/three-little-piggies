<idea-plugin version="2">
    <name>Three Little Piggies</name>
    <description>A language plugin for Apache Pig</description>
    <version>1.0</version>
    <vendor>Metamarkets</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTypeFactory implementation="com.metamx.idea.pig.PigFileTypeFactory"/>
        <lang.syntaxHighlighterFactory key="PigLanguage" implementationClass="com.metamx.idea.pig.PigSyntaxHighlighterFactory"/>
        <!--<lang.parserDefinition>com.metamx.idea.pig.PigParserDefinition</lang.parserDefinition>-->
    </extensions>
    <module-components></module-components>
</idea-plugin>